StatusLabel.Font = Enum.Font.Gotham
StatusLabel.Text = "Готово к спавну"
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
StatusLabel.TextSize = 14

-- Переменные
local selectedType = "Normal"
local isSpawning = false

-- Функция обновления цвета кнопок
local function updateButtonColors()
    MFRButton.BackgroundColor3 = selectedType == "MFR" and Color3.fromRGB(255, 255, 0) or Color3.fromRGB(255, 170, 0)
    FRButton.BackgroundColor3 = selectedType == "FR" and Color3.fromRGB(255, 120, 0) or Color3.fromRGB(255, 85, 0)
    NFRButton.BackgroundColor3 = selectedType == "NFR" and Color3.fromRGB(0, 220, 255) or Color3.fromRGB(0, 170, 255)
    NormalButton.BackgroundColor3 = selectedType == "Normal" and Color3.fromRGB(150, 150, 150) or Color3.fromRGB(100, 100, 100)
end

-- Обработчики кнопок выбора типа
MFRButton.MouseButton1Click:Connect(function()
    selectedType = "MFR"
    updateButtonColors()
    StatusLabel.Text = "Выбран тип: MFR (Mega Fly Ride)"
end)

FRButton.MouseButton1Click:Connect(function()
    selectedType = "FR"
    updateButtonColors()
    StatusLabel.Text = "Выбран тип: FR (Fly Ride)"
end)

NFRButton.MouseButton1Click:Connect(function()
    selectedType = "NFR"
    updateButtonColors()
    StatusLabel.Text = "Выбран тип: NFR (Neon Fly Ride)"
end)

NormalButton.MouseButton1Click:Connect(function()
    selectedType = "Normal"
    updateButtonColors()
    StatusLabel.Text = "Выбран тип: Normal (Обычный)"
end)

-- Функция получения префикса для питомца
local function getPetPrefix()
    if selectedType == "MFR" then
        return "Mega Neon Fly Ride "
    elseif selectedType == "FR" then
        return "Fly Ride "
    elseif selectedType == "NFR" then
        return "Neon Fly Ride "
    else
        return ""
    end
end

-- Основная функция спавна питомцев
SpawnButton.MouseButton1Click:Connect(function()
    if isSpawning then return end
    
    isSpawning = true
    SpawnButton.Text = "СПАВНИМ..."
    SpawnButton.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
    
    local prefix = getPetPrefix()
    local spawnedCount = 0
    
    for i, petName in ipairs(rarePets) do
        if not isSpawning then break end
        
        local fullPetName = prefix .. petName
        StatusLabel.Text = string.format("Спавним: %s\n(%d/50)", fullPetName, i)
        
        -- Имитация команды спавна (замените на реальную функцию спавна)
        wait(0.1) -- Задержка между спавнами
        
        -- Здесь должна быть реальная функция спавна питомцев
        -- Пример: game:GetService("ReplicatedStorage").RemoteEvents.PetSpawn:FireServer(fullPetName)
        
        spawnedCount = i
    end
    
    StatusLabel.Text = string.format("Готово! Спавнено %d питомцев\nТип: %s", spawnedCount, selectedType)
    SpawnButton.Text = "СПАВНИТЬ 50 РЕДКИХ ПЕТОВ"
    SpawnButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    isSpawning = false
end)

-- Кнопка закрытия
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Инициализация
updateButtonColors()
StatusLabel.Text = "Выберите тип питомца и нажмите кнопку"
