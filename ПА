-- –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
local selectedType = "Normal"
local isSpawning = false
local spawnedPets = {}

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è —Ü–≤–µ—Ç–∞ —Ä–µ–¥–∫–æ—Å—Ç–∏
local function getRarityColor(rarity)
    if rarity == "Legendary" then
        return Color3.fromRGB(255, 170, 0) -- –û—Ä–∞–Ω–∂–µ–≤—ã–π
    elseif rarity == "Ultra-Rare" then
        return Color3.fromRGB(180, 0, 255) -- –§–∏–æ–ª–µ—Ç–æ–≤—ã–π
    elseif rarity == "Rare" then
        return Color3.fromRGB(0, 100, 255) -- –°–∏–Ω–∏–π
    elseif rarity == "Uncommon" then
        return Color3.fromRGB(0, 170, 0) -- –ó–µ–ª–µ–Ω—ã–π
    else
        return Color3.fromRGB(150, 150, 150) -- –°–µ—Ä—ã–π
    end
end

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –≤–∏–∑—É–∞–ª—å–Ω–æ–≥–æ –ø–∏—Ç–æ–º—Ü–∞
local function createVisualPet(petData, petType)
    local petName = petData.Name
    if petType == "MFR" then
        petName = "Mega Neon Fly Ride " .. petName
    elseif petType == "FR" then
        petName = "Fly Ride " .. petName
    elseif petType == "NFR" then
        petName = "Neon Fly Ride " .. petName
    end
    
    -- –°–æ–∑–¥–∞–µ–º –æ–±—ä–µ–∫—Ç –ø–∏—Ç–æ–º—Ü–∞ –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä–µ
    local pet = Instance.new("Tool")
    pet.Name = petName
    pet.Parent = backpack
    
    -- –î–æ–±–∞–≤–ª—è–µ–º —Ä—É—á–∫—É –¥–ª—è –≤–∏–∑—É–∞–ª—å–Ω–æ–≥–æ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏—è
    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 1, 1)
    handle.Position = Vector3.new(0, 0, 0)
    handle.Transparency = 1
    handle.CanCollide = false
    handle.Parent = pet
    
    -- –°–æ–∑–¥–∞–µ–º BillboardGui –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "PetInfo"
    billboard.Size = UDim2.new(5, 0, 2, 0)
    billboard.StudsOffset = Vector3.new(0, 2, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = handle
    
    -- –§–æ–Ω –¥–ª—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
    local frame = Instance.new("Frame")
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.BackgroundTransparency = 0.3
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BorderSizePixel = 0
    frame.Parent = billboard
    
    -- –ù–∞–∑–≤–∞–Ω–∏–µ –ø–∏—Ç–æ–º—Ü–∞
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Text = petName
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 14
    nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Size = UDim2.new(1, 0, 0.4, 0)
    nameLabel.Parent = frame
    
    -- –†–µ–¥–∫–æ—Å—Ç—å –ø–∏—Ç–æ–º—Ü–∞
    local rarityLabel = Instance.new("TextLabel")
    rarityLabel.Text = "–†–µ–¥–∫–æ—Å—Ç—å: " .. petData.Rarity
    rarityLabel.Font = Enum.Font.Gotham
    rarityLabel.TextSize = 12
    rarityLabel.TextColor3 = getRarityColor(petData.Rarity)
    rarityLabel.BackgroundTransparency = 1
    rarityLabel.Size = UDim2.new(1, 0, 0.3, 0)
    rarityLabel.Position = UDim2.new(0, 0, 0.4, 0)
    rarityLabel.Parent = frame
    
    -- –¢–∏–ø –ø–∏—Ç–æ–º—Ü–∞
    local typeLabel = Instance.new("TextLabel")
    typeLabel.Text = "–¢–∏–ø: " .. petType
    typeLabel.Font = Enum.Font.Gotham
    typeLabel.TextSize = 12
    typeLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    typeLabel.BackgroundTransparency = 1
    typeLabel.Size = UDim2.new(1, 0, 0.3, 0)
    typeLabel.Position = UDim2.new(0, 0, 0.7, 0)
    typeLabel.Parent = frame
    
    -- –î–æ–±–∞–≤–ª—è–µ–º —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ —ç—Ñ—Ñ–µ–∫—Ç—ã –¥–ª—è —Ä–∞–∑–Ω—ã—Ö —Ç–∏–ø–æ–≤
    if petType == "MFR" then
        -- –≠—Ñ—Ñ–µ–∫—Ç –¥–ª—è MFR
        local particle = Instance.new("ParticleEmitter")
        particle.Color = ColorSequence.new(petData.Color)
        particle.Size = NumberSequence.new(0.5)
        particle.Lifetime = NumberRange.new(1)
        particle.Rate = 50
        particle.Speed = NumberRange.new(2)
        particle.Parent = handle
        
        -- –°–≤–µ—á–µ–Ω–∏–µ
        local glow = Instance.new("SurfaceLight")
        glow.Color = petData.Color
        glow.Brightness = 2
        glow.Range = 5
        glow.Parent = handle
    elseif petType == "NFR" then
        -- –≠—Ñ—Ñ–µ–∫—Ç –¥–ª—è NFR
        local particle = Instance.new("ParticleEmitter")
        particle.Color = ColorSequence.new(petData.Color)
        particle.Size = NumberSequence.new(0.3)
        particle.Lifetime = NumberRange.new(0.5)
        particle.Rate = 30
        particle.Speed = NumberRange.new(1)
        particle.Parent = handle
    elseif petType == "FR" then
        -- –≠—Ñ—Ñ–µ–∫—Ç –¥–ª—è FR
        local sparkles = Instance.new("Sparkles")
        sparkles.SparkleColor = petData.Color
        sparkles.Parent = handle
    end
    
    -- –î–æ–±–∞–≤–ª—è–µ–º –∑–≤—É–∫ –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://4590662766" -- –ü—Ä–∏—è—Ç–Ω—ã–π –∑–≤—É–∫
    sound.Volume = 0.3
    sound.Parent = handle
    
    -- –î–æ–±–∞–≤–ª—è–µ–º —Å–∫—Ä–∏–ø—Ç –¥–ª—è –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è
    local clickScript = Instance.new("Script")
    clickScript.Source = [[
        tool = script.Parent
        handle = tool:WaitForChild("Handle")
        sound = handle:WaitForChild("Sound")
        
        tool.Activated:Connect(function()
            sound:Play()
        end)
        
        tool.Equipped:Connect(function()
            sound:Play()
        end)
    ]]
    clickScript.Parent = pet
    
    return pet
end

-- –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–≤–µ—Ç–∞ –∫–Ω–æ–ø–æ–∫
local function updateButtonColors()
    MFRButton.BackgroundColor3 = selectedType == "MFR" and Color3.fromRGB(255, 255, 0) or Color3.fromRGB(255, 170, 0)
    FRButton.BackgroundColor3 = selectedType == "FR" and Color3.fromRGB(255, 120, 0) or Color3.fromRGB(255, 85, 0)
    NFRButton.BackgroundColor3 = selectedType == "NFR" and Color3.fromRGB(0, 220, 255) or Color3.fromRGB(0, 170, 255)
    NormalButton.BackgroundColor3 = selectedType == "Normal" and Color3.fromRGB(150, 150, 150) or Color3.fromRGB(100, 100, 100)
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫ –≤—ã–±–æ—Ä–∞ —Ç–∏–ø–∞
MFRButton.MouseButton1Click:Connect(function()
    selectedType = "MFR"
    updateButtonColors()
    StatusLabel.Text = "üåü –í—ã–±—Ä–∞–Ω —Ç–∏–ø: MFR (Mega Fly Ride)\n‚ú® –ü–∏—Ç–æ–º—Ü—ã –±—É–¥—É—Ç —Å —ç—Ñ—Ñ–µ–∫—Ç–æ–º MEGA NEON!"
end)

FRButton.MouseButton1Click:Connect(function()
    selectedType = "FR"
    updateButtonColors()
    StatusLabel.Text = "‚úàÔ∏è –í—ã–±—Ä–∞–Ω —Ç–∏–ø: FR (Fly Ride)\n‚ú® –ü–∏—Ç–æ–º—Ü—ã –±—É–¥—É—Ç –ª–µ—Ç–∞—é—â–∏–º–∏!"
end)

NFRButton.MouseButton1Click:Connect(function()
    selectedType = "NFR"
    updateButtonColors()
    StatusLabel.Text = "‚ú® –í—ã–±—Ä–∞–Ω —Ç–∏–ø: NFR (Neon Fly Ride)\nüåà –ü–∏—Ç–æ–º—Ü—ã –±—É–¥—É—Ç –Ω–µ–æ–Ω–æ–≤—ã–º–∏!"
end)

NormalButton.MouseButton1Click:Connect(function()
    selectedType = "Normal"
    updateButtonColors()
    StatusLabel.Text = "üêæ –í—ã–±—Ä–∞–Ω —Ç–∏–ø: Normal (–û–±—ã—á–Ω—ã–π)\nüì¶ –ë–∞–∑–æ–≤—ã–µ –ø–∏—Ç–æ–º—Ü—ã –±–µ–∑ —ç—Ñ—Ñ–µ–∫—Ç–æ–≤"
end)

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —Å–ø–∞–≤–Ω–∞ –ø–∏—Ç–æ–º—Ü–µ–≤
SpawnButton.MouseButton1Click:Connect(function()
    if isSpawning then return end
    
    isSpawning = true
    SpawnButton.Text = "üéÆ –°–ü–ê–í–ù–ò–ú..."
    SpawnButton.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
    
    local spawnedCount = 0
    
    for i, petData in ipairs(rarePets) do
        if not isSpawning then break end
        
        -- –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
        StatusLabel.Text = string.format("‚ú® –°–æ–∑–¥–∞–µ–º: %s\nüì¶ (%d/50) –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä–µ", petData.Name, i)
        
        -- –°–æ–∑–¥–∞–µ–º –≤–∏–∑—É–∞–ª—å–Ω–æ–≥–æ –ø–∏—Ç–æ–º—Ü–∞
        local pet = createVisualPet(petData, selectedType)
        table.insert(spawnedPets, pet)
        
        -- –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –≤–∏–∑—É–∞–ª—å–Ω–æ–≥–æ —ç—Ñ—Ñ–µ–∫—Ç–∞
        wait(0.05)
        
        spawnedCount = i
    end
    
    StatusLabel.Text = string.format("‚úÖ –ì–æ—Ç–æ–≤–æ! –°–æ–∑–¥–∞–Ω–æ %d –ø–∏—Ç–æ–º—Ü–µ–≤\nüéØ –¢–∏–ø: %s\nüì¶ –û—Ç–∫—Ä–æ–π—Ç–µ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å (I) —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å!", spawnedCount, selectedType)
    SpawnButton.Text = "‚ú® –°–ü–ê–í–ù–ò–¢–¨ 50 –†–ï–î–ö–ò–• –ü–ï–¢–û–í ‚ú®"
    SpawnButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    isSpawning = false
end)

-- –§—É–Ω–∫—Ü–∏—è –æ—á–∏—Å—Ç–∫–∏ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è
ClearButton.MouseButton1Click:Connect(function()
    for _, pet in ipairs(spawnedPets) do
        if pet and pet.Parent then
            pet:Destroy()
        end
    end
    
    spawnedPets = {}
    StatusLabel.Text = "üóëÔ∏è –ò–Ω–≤–µ–Ω—Ç–∞—Ä—å –æ—á–∏—â–µ–Ω!\nüì¶ –í—Å–µ —Å–æ–∑–¥–∞–Ω–Ω—ã–µ –ø–∏—Ç–æ–º—Ü—ã —É–¥–∞–ª–µ–Ω—ã"
    
    -- –¢–∞–∫–∂–µ –æ—á–∏—â–∞–µ–º –≤—Å–µ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã, —Å–æ–∑–¥–∞–Ω–Ω—ã–µ —Å–∫—Ä–∏–ø—Ç–æ–º
    for _, item in ipairs(backpack:GetChildren()) do
        if item:IsA("Tool") and string.find(item.Name, "Fly Ride") then
            item:Destroy()
        end
    end
end)

-- –ö–Ω–æ–ø–∫–∞ –∑–∞–∫—Ä—ã—Ç–∏—è
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
updateButtonColors()

-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ—Ç–∫—Ä—ã—Ç–∏–µ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ
spawn(function()
    wait(2)
    StatusLabel.Text = "üéÆ –ì–æ—Ç–æ–≤–æ –∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é!\nüéØ –í—ã–±–µ—Ä–∏—Ç–µ —Ç–∏–ø –ø–∏—Ç–æ–º—Ü–µ–≤ –∏ –Ω–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É\nüì¶ –ü–∏—Ç–æ–º—Ü—ã –ø–æ—è–≤—è—Ç—Å—è –≤ –≤–∞—à–µ–º –∏–Ω–≤–µ–Ω—Ç–∞—Ä–µ (I)"
end)
